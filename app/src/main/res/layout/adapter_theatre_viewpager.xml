<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clViewPager"
    android:layout_width="@dimen/_200sdp"
    android:layout_height="@dimen/_110sdp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivCinemaLoc"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tvCinemaName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/gotham_bold"
        android:paddingStart="10dp"
        android:text=""
        android:textColor="@color/marcus_red"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/ivCinemaLoc" />

    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/redfilledheart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gotham_bold"
        android:paddingStart="10dp"
        android:text=""
        android:textColor="@color/grey_xlight"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/tvCinemaName" />


</android.support.constraint.ConstraintLayout>
