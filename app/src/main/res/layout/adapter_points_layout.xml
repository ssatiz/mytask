<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clTransaction"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    android:minHeight="50dp">

    <android.support.constraint.Guideline
        android:id="@+id/guideline3V"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.32" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline6V"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:text=""
        android:fontFamily="@font/gotham_book"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/guideline3V"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvTheatres"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:text=""
        android:fontFamily="@font/gotham_book"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/guideline6V"
        app:layout_constraintStart_toStartOf="@id/guideline3V" />

    <TextView
        android:id="@+id/tvPointsEarned"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:text=""
        android:fontFamily="@font/gotham_book"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline6V" />
</android.support.constraint.ConstraintLayout>
