<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clViewPager"
    android:layout_width="@dimen/_200sdp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_20sdp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivCinemaLoc"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_110sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY" />
    <LinearLayout
        android:id="@+id/llLoader"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_110sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/loader"
            style="@style/AVLoadingIndicatorView"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:visibility="visible"
            app:indicatorColor="@color/marcus_red"
            app:indicatorName="LineSpinFadeLoaderIndicator" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvCinemaName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/gotham_bold"
        android:paddingStart="10dp"
        android:text=""
        android:textColor="@color/marcus_red"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/ivCinemaLoc" />

    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/redfilledheart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:fontFamily="@font/gotham_bold"
        android:paddingStart="10dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text=""
        android:textColor="@color/grey_xlight"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/tvCinemaName" />


</android.support.constraint.ConstraintLayout>
