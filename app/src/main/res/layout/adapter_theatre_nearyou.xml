<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clNeaYouRecyclerview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:paddingTop="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp">

    <RelativeLayout
        android:id="@+id/rlTheatreNearyou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvCinemaName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gotham_bold"
        android:paddingStart="@dimen/_10sdp"
        android:text="@string/no_data"
        android:textStyle="bold"
        android:textSize="@dimen/_14sdp"
        android:layout_toLeftOf="@id/tvmiles"
        android:layout_alignParentStart="true"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvmiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/gotham_book"
        android:paddingStart="10dp"
        android:textColor="@color/red"
        android:textSize="@dimen/_12sdp"
        android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tvCinemaAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gotham_book"
        android:paddingStart="@dimen/_10sdp"
        android:layout_marginTop="5dp"
        android:text="@string/no_data"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/grey_xlight"
        app:layout_constraintTop_toBottomOf="@+id/rlTheatreNearyou" />
    <TextView
        android:id="@+id/tvCinemaAddressTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gotham_book"
        android:paddingStart="@dimen/_10sdp"
        android:layout_marginTop="5dp"
        android:text="@string/no_data"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/grey_xlight"
        app:layout_constraintTop_toBottomOf="@+id/tvCinemaAddress" />

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="8dp"
        android:background="@color/text_grey"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvCinemaAddressTwo" />


</android.support.constraint.ConstraintLayout>
