<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llBreakup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:background="@android:color/black"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icClose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:padding="10dp"
        android:src="@drawable/close_ic" />

    <RelativeLayout
        android:id="@+id/rrTicketDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_15sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tvSubtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_medium"
            android:text="@string/payment_breakup"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tvSubtotal"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/blur_grey" />


        <TextView
            android:id="@+id/tvTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/gotham_book"
            android:text="@string/ticket"
            android:textColor="@color/marcus_red"
            android:textSize="@dimen/_8sdp" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvTicketTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTicket"
            android:layout_marginTop="10dp">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/tvRewards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rvTicketTypes"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toStartOf="@+id/tvRewardsAmount"
            android:fontFamily="@font/gotham_book"
            android:text="@string/reward_payment"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvRewardsAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/rvTicketTypes"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/gotham_book"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/tvGiftCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvRewards"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toStartOf="@+id/tvRewardsAmount"
            android:fontFamily="@font/gotham_book"
            android:text="@string/gift_card_payment"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvGiftCardAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tvRewardsAmount"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/gotham_book"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="@dimen/_10sdp" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tvGiftCard"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@color/blur_grey" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toStartOf="@+id/tvTotalAmount"
            android:fontFamily="@font/gotham_bold"
            android:text="@string/total"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/tvTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/view2"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/gotham_bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />

    </RelativeLayout>
</LinearLayout>
