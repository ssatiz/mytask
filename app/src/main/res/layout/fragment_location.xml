<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollLayoutParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:descendantFocusability="beforeDescendants"
    android:paddingTop="20dp"
    tools:context="com.influx.marcus.theatres.preferences.PreferenceActivity">

    <ImageView
        android:id="@+id/ivLocationIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/locationwhite"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spnManualLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:dropDownVerticalOffset="32dp"
        android:popupBackground="@color/black"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivLocationIcon" />


    <TextView
        android:id="@+id/tvMylocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/locationred"
        android:drawablePadding="12dp"
        android:fontFamily="@font/gotham_book"
        android:gravity="center"
        android:text="@string/theatres_name"
        android:textColor="@color/marcus_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewLine" />

    <Spinner
        android:id="@+id/spnLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:dropDownVerticalOffset="32dp"
        android:gravity="center"
        android:popupBackground="@color/greyy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMylocation" />

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:background="@android:color/transparent"
        android:maxHeight="3dp"
        android:min="1"
        android:progressDrawable="@drawable/progressdrawable"
        android:splitTrack="false"
        android:thumb="@drawable/shape_seekbar_thumb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnLocation" />


    <TextView
        android:id="@+id/tvLimit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/gotham_book"
        android:paddingLeft="20dp"
        android:text="@string/show_location_within_a"
        android:textColor="@color/grey_light"
        android:textSize="12sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@+id/seekbar" />

    <TextView
        android:id="@+id/tvLimitTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/gothambold"
        android:text="@string/_100mile"
        android:textColor="@color/marcus_red"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvLimit"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/tvLimit"
        app:layout_constraintTop_toBottomOf="@+id/seekbar" />

    <TextView
        android:id="@+id/tvLimitedTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/gotham_book"
        android:text="@string/radius"
        android:textColor="@color/grey_light"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvLimit"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/tvLimitTxt"
        app:layout_constraintTop_toBottomOf="@+id/seekbar" />

    <View
        android:id="@+id/viewLineSeekbar"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/text_grey"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLimitedTxt"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/etCityname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:focusable="true"
        android:fontFamily="@font/gotham_book"
        android:hint="@string/enter_city_name"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/viewLineSeekbar" />

    <ExpandableListView
        android:id="@+id/lvExp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:listSelector="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCityname" />

    <android.support.constraint.Group
        android:id="@+id/grpTextSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="seekbar,tvLimit,tvLimitTxt,tvLimitedTxt" />

</android.support.constraint.ConstraintLayout>
