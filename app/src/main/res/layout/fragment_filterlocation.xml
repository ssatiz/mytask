<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="10dp"
    tools:context=".moviefilter.LocationFragment">

    <EditText
        android:id="@+id/etSearchByMve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:background="@color/black"
        android:cursorVisible="false"
        android:drawableLeft="@drawable/ic_search"
        android:fontFamily="@font/gotham_book"
        android:gravity="center_vertical"
        android:hint="@string/search_by_fulladdress"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white_light"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
         />

    <View
        android:id="@+id/Vsearch"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:background="@color/grey_xlight"
        app:layout_constraintTop_toBottomOf="@+id/etSearchByMve" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvCinema"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:listSelector="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Vsearch" />

</android.support.constraint.ConstraintLayout>