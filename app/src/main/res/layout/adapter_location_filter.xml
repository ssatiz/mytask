<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clLocation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/linearFav"
        android:layout_width="20dp"
        android:layout_height="32dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/select"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/redborderheart" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvCinema"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:fontFamily="@font/gotham_book"
        android:gravity="center_vertical"
        android:textColor="@color/grey_light"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/linearFav"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMiles"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:fontFamily="@font/gotham_book"
        android:gravity="center_vertical"
        android:textColor="@color/darkgrey"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvCinema"
        />


</android.support.constraint.ConstraintLayout>
