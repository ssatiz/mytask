<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:descendantFocusability="beforeDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="20dp"
    tools:context="com.influx.marcus.theatres.login.LoginScreen">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fontFamily="@font/gotham_bold"
        android:gravity="center"
        android:text="@string/sign_in_as_a_guest"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTime"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="20dp" />

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/backarrow"
        app:layout_constraintStart_toStartOf="@id/tvForget"
        app:layout_constraintTop_toBottomOf="@+id/tvTime"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="20dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputFName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white_light"
        android:hint="@string/first_name"
        android:textColorHint="@color/white_light"
        app:hintEnabled="true"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle">

        <EditText
            android:id="@+id/editFName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white_light"
            android:fontFamily="@font/gotham_book"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:maxLength="20"
            android:inputType="textCapSentences"
            android:textColor="@color/white_light"
            android:textColorHint="@color/white_light"
            android:textSize="14sp" />
    </android.support.design.widget.TextInputLayout>


    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/gotham_book"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputlname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white_light"
        android:hint="@string/last_name"
        android:textColorHint="@color/white_light"
        app:hintEnabled="true"
        app:layout_constraintTop_toBottomOf="@+id/inputFName">

        <EditText
            android:id="@+id/etLName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white_light"
            android:fontFamily="@font/gotham_book"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:text=""
            android:maxLength="20"
            android:inputType="textCapSentences"
            android:textColor="@color/white_light"
            android:textColorHint="@color/white_light"
            android:textSize="14sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white_light"
        android:hint="@string/email"
        android:textColorHint="@color/white_light"
        app:hintEnabled="true"
        app:layout_constraintTop_toBottomOf="@+id/inputlname">

        <EditText
            android:id="@+id/etMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white_light"
            android:fontFamily="@font/gotham_book"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white_light"
            android:textColorHint="@color/white_light"
            android:textSize="14sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputmobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white_light"
        android:hint="@string/mobile_number"
        android:textColorHint="@color/white_light"
        app:hintEnabled="true"
        app:layout_constraintTop_toBottomOf="@+id/inputMail"
        app:passwordToggleDrawable="@drawable/pass_toggle"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/white">

        <EditText
            android:id="@+id/etMobilenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white_light"
            android:fontFamily="@font/gotham_book"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:maxLength="12"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white_light"
            android:textColorHint="@color/white_light"
            android:textSize="14sp" />
    </android.support.design.widget.TextInputLayout>


