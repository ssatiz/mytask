<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/clCardlayout"
    android:background="@color/black"
    android:padding="10dp">

    <RadioButton
        android:id="@+id/rbChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:checked="false"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableLeft="@drawable/radio_button_checkbox_selector"
        android:drawablePadding="4dp" />

    <ImageView
        android:id="@+id/ivCard"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:tint="@color/white_light"
        app:layout_constraintStart_toEndOf="@id/rbChoose"
        app:layout_constraintTop_toBottomOf="@+id/tvCardCount" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/gotham_book"
        android:textColor="@color/grey_xlight"
        app:layout_constraintStart_toEndOf="@id/ivCard"
        app:layout_constraintTop_toBottomOf="@+id/tvCardCount" />

    <TextView
        android:id="@+id/tvCardNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/gotham_book"
        android:textColor="@color/white_light"
        app:layout_constraintStart_toEndOf="@id/ivCard"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />


    <ImageView
        android:id="@+id/ivDustbin"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="@id/tvName"
        app:layout_constraintBottom_toBottomOf="@id/tvCardNo"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/dustbin_white"
        android:tint="@color/white_light"
        android:layout_marginStart="@dimen/_5sdp"
        />


    <LinearLayout
        android:id="@+id/clDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="1"
        app:layout_constraintStart_toStartOf="@+id/ivCard"
        app:layout_constraintTop_toBottomOf="@+id/tvCardNo">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputCVV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:backgroundTint="@color/white_light"
            android:hint="@string/cvv"
            android:textColorHint="@color/white_light"
            app:hintEnabled="true">

            <EditText
                android:id="@+id/tvCVV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/white_light"
                android:fontFamily="@font/gotham_book"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="4"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white_light"
                android:textColorHint="@color/white_light"
                android:textSize="12sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputZip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:backgroundTint="@color/white_light"
            android:hint="@string/zipcode"
            android:textColorHint="@color/white_light"
            app:hintEnabled="true"
            app:layout_constraintStart_toEndOf="@+id/inputCVV">

            <EditText
                android:id="@+id/tvZipcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/white_light"
                android:fontFamily="@font/gotham_book"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="6"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white_light"
                android:textColorHint="@color/white_light"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/inputCVV" />
        </android.support.design.widget.TextInputLayout>


        <!--
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/grey_xlight"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@id/tvCVV"
                app:layout_constraintTop_toBottomOf="@+id/tvCVV"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/grey_xlight"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@+id/tvZipcode"
                app:layout_constraintEnd_toEndOf="@id/tvZipcode"
                app:layout_constraintTop_toBottomOf="@+id/tvZipcode"/>-->
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
