<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollLayoutParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:descendantFocusability="beforeDescendants"
    tools:context="com.influx.marcus.theatres.preferences.LocationGPSFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvSelectedCinema"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_28sdp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp">

    </android.support.v7.widget.RecyclerView>

    <Spinner
        android:id="@+id/spnLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:dropDownVerticalOffset="32dp"
        android:gravity="center"
        android:popupBackground="@color/black"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMylocation" />

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@android:color/transparent"
        android:maxHeight="3dp"
        android:min="1"
        android:progressDrawable="@drawable/progressdrawable"
        android:splitTrack="false"
        android:thumb="@drawable/shape_seekbar_thumb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvSelectedCinema" />


    <TextView
        android:id="@+id/tvLimit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/gotham_book"
        android:paddingLeft="20dp"
        android:text="@string/show_location_within_a"
        android:textColor="@color/grey_light"
        android:textSize="12sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@+id/seekbar" />

    <TextView
        android:id="@+id/tvLimitTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_3sdp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/gothambold"
        android:text="@string/_50_mile"
        android:textColor="@color/marcus_red"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvLimit"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/tvLimit"
        app:layout_constraintTop_toBottomOf="@+id/seekbar" />

    <TextView
        android:id="@+id/tvLimitedTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/gotham_book"
        android:text="@string/radius"
        android:textColor="@color/grey_light"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvLimit"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/tvLimitTxt"
        app:layout_constraintTop_toBottomOf="@+id/seekbar" />

    <View
        android:id="@+id/viewLineSeekbar"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@color/text_grey"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLimitedTxt"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/etCityname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/_12sdp"
        android:backgroundTint="@color/marcus_red"
        android:focusable="false"
        android:fontFamily="@font/gotham_book"
        android:hint="@string/search_by_fulladdress"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="11sp"
        app:layout_constraintTop_toBottomOf="@+id/viewLineSeekbar" />

    <TextView
        android:id="@+id/tvNoLocationFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gotham_book"
        android:text="@string/no_location_found"
        android:textColor="@color/marcus_red"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCityname" />


    <ExpandableListView
        android:id="@+id/lvExp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:listSelector="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@id/llChooseLocManually"
        app:layout_constraintTop_toBottomOf="@+id/etCityname" />

    <android.support.constraint.Group
        android:id="@+id/grpTextSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="seekbar,tvLimit,tvLimitTxt,tvLimitedTxt" />

    <LinearLayout
        android:id="@+id/llChooseLocManually"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_24sdp"
        android:layout_marginStart="@dimen/_24sdp"
        android:gravity="right"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/nongps" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/gotham_book"
            android:text="@string/manual"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
