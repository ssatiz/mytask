<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/_300sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/btnOpenPanel"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/seat_preview_btn"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:padding="@dimen/_2sdp">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/seat_preview" />

                <TextView
                    android:id="@+id/previewTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/gotham_bold"
                    android:text="@string/preview"
                    android:textColor="@color/black" />
            </LinearLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/btnBuyTickets"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_weight="1"
            android:background="@color/marcus_red"
            android:fontFamily="@font/gotham_bold"
            android:text="@string/buy_tickets"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clTopClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvCloseTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_bold"
            android:text="@string/close"
            android:textColor="@color/marcus_red"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="2dp"
            android:background="@color/grey_xlight"
            app:layout_constraintEnd_toEndOf="@id/tvCloseTop"
            app:layout_constraintStart_toStartOf="@id/tvCloseTop"
            app:layout_constraintTop_toBottomOf="@id/tvCloseTop" />
    </android.support.constraint.ConstraintLayout>


    <LinearLayout
        android:id="@+id/llSeatPreviewLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_350sdp"
        android:background="@color/black"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/gotham_bold"
            android:text="@string/preview_only"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:fontFamily="@font/gotham_book"
            android:text="@string/preview_onlystr"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:src="@drawable/empty_seat_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/gotham_book"
                    android:text="@string/available"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:src="@drawable/selected_seat_grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/gotham_book"
                    android:text="@string/occupied"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:src="@drawable/wheelchair_seat_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/gotham_book"
                    android:text="@string/wheel_chair"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_6sdp">

            <ImageView
                android:id="@+id/ivCoupleLegendLeft"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/sofaleft" />

            <ImageView
                android:id="@+id/ivCoupleLegendRight"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/sofaright" />

            <TextView
                android:id="@+id/tvCoupleLegendText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/gotham_book"
                android:text="@string/coupleseat"
                android:textColor="@color/white"
                android:textSize="10sp" />


            <ImageView
                android:id="@+id/ivCompanion"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:src="@drawable/companion_seat_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/gotham_book"
                android:text="@string/companion"
                android:textColor="@color/white"
                android:textSize="@dimen/_9sdp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_12sdp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/curvescreen"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/tvScreenLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/gotham_book"
            android:gravity="center"
            android:text="@string/screen"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_weight="1">

            <com.otaliastudios.zoom.ZoomLayout
                android:id="@+id/zlParent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_10sdp"
                android:scrollbars="vertical|horizontal"
                app:hasClickableChildren="true"
                app:horizontalPanEnabled="true"
                app:overPinchable="false"
                app:transformation="centerInside"
                app:verticalPanEnabled="true"
                app:zoomEnabled="true">

                <TableLayout
                    android:id="@+id/tblSeats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp" />
            </com.otaliastudios.zoom.ZoomLayout>
        </RelativeLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/clBottomClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_6sdp">

            <TextView
                android:id="@+id/tvCloseBottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham_bold"
                android:text="@string/x_close"
                android:textColor="@color/marcus_red"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="2dp"
                android:background="@color/grey"
                app:layout_constraintEnd_toEndOf="@id/tvCloseBottom"
                app:layout_constraintStart_toStartOf="@id/tvCloseBottom"
                app:layout_constraintTop_toBottomOf="@id/tvCloseBottom" />
        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</LinearLayout>
