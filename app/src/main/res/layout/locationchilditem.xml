<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:id="@+id/linearFav"
        android:layout_width="20dp"
        android:layout_height="32dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/unselect"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/redborderheart" />

        <ImageView
            android:id="@+id/select"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/redfilledheart"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/locationChildItem"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:fontFamily="@font/gotham_book"
        android:textColor="@color/grey_light"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/linearFav" />

    <TextView
        android:id="@+id/tvMiles"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:fontFamily="@font/gotham_book"
        android:gravity="center_vertical"
        android:textColor="@color/darkgrey"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/locationChildItem"
        />

</android.support.constraint.ConstraintLayout>
