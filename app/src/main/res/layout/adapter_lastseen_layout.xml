<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/black"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvMveName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/gotham_bold"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvCinemaName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_160sdp"
            android:drawableLeft="@drawable/ic_location_black"
            android:fontFamily="@font/gotham_book"
            android:textColor="@color/grey_xlight"
            android:textSize="12sp"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMveName" />

        <ImageView
            android:id="@+id/ivExperience"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginStart="10dp"
            android:background="@color/black"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:padding="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMveName" />

        <TextView
            android:id="@+id/tvExperiencename"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:fontFamily="@font/gotham_medium"
            android:gravity="center"
            android:textColor="@color/marcus_red"
            android:visibility="gone"

            android:layout_marginTop="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMveName" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/date_black"
            android:fontFamily="@font/gotham_medium"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/tvCinemaName" />

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:background="@color/grey_xlight"
            app:layout_constraintBottom_toBottomOf="@+id/tvDate"
            app:layout_constraintStart_toEndOf="@id/tvDate"
            app:layout_constraintTop_toBottomOf="@+id/tvCinemaName"
            app:layout_constraintTop_toTopOf="@+id/tvDate" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:drawablePadding="-2dp"
            android:drawableStart="@drawable/time_black"
            android:fontFamily="@font/gotham_medium"
            android:gravity="center|right"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/tvCinemaName" />

        <TextView
            android:id="@+id/tvSelectedSeats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="-2dp"
            android:drawableStart="@drawable/seat_icon_black"
            android:fontFamily="@font/gotham_medium"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/tvTime" />
    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/rrTicketDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_15sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_15sdp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TextView
            android:id="@+id/tvSubtotal"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:fontFamily="@font/gotham_book"
            android:gravity="center"
            android:text="@string/booking_summary"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ivUpArrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/uparrow"
            android:tint="@color/black" />

        <View
            android:id="@+id/viewSub"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tvSubtotal"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/blur_grey" />


        <TextView
            android:id="@+id/tvTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewSub"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/gotham_book"
            android:text="@string/ticket"
            android:textColor="@color/marcus_red"
            android:textSize="@dimen/_8sdp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvTicketTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTicket">

        </android.support.v7.widget.RecyclerView>


        <TextView
            android:id="@+id/tvRewards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rvTicketTypes"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toStartOf="@+id/tvOtherChargeAmount"
            android:fontFamily="@font/gotham_book"
            android:text="@string/other_charges"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvOtherChargeAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/rvTicketTypes"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/gotham_book"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:visibility="gone" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tvRewards"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@color/blur_grey" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toStartOf="@+id/tvTotalAmount"
            android:fontFamily="@font/gotham_bold"
            android:text="@string/total"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/tvTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/view2"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/gotham_bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/ivBottomNotch"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
