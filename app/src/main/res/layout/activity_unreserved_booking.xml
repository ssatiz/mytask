<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".unreservedbooking.UnreservedBooking">

    <ImageView
        android:id="@+id/ivMovie"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/black_filled"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tvToolbarTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/gothambold"
            android:gravity="center"
            android:singleLine="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvTheatreName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvToolbarTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/gotham_book"
            android:gravity="center"
            android:textColor="@color/white_light"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/ivLoc"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/tvToolbarTitle"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@+id/tvTheatreName"
            android:src="@drawable/location" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tvTicketCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/gotham_book"
        android:gravity="center"
        android:textColor="@color/white_light"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/gotham_bold"
        android:gravity="center"
        android:textColor="@color/white_light"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/tvTicketCount" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvTicketTypes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvAmount">
    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/btContinue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:background="@color/marcus_red"
        android:fontFamily="@font/gotham_bold"
        android:text="@string/continue_"
        android:textColor="@color/white"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>