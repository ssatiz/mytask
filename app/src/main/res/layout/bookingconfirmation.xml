<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.Guideline
            android:id="@+id/guideline4V"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline4.2V"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.40" />

        <ImageView
            android:id="@+id/ivMveImg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:background="@drawable/bookingsuccessborder"
            app:layout_constraintBottom_toBottomOf="@+id/guideline4V"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/loader"
            style="@style/AVLoadingIndicatorView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:visibility="visible"
            app:indicatorColor="@color/marcus_red"
            app:indicatorName="BallScaleMultipleIndicator"
            app:layout_constraintBottom_toTopOf="@+id/guideline4V"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/vPosterGradient"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:background="@drawable/gradient_bookreview"
            app:layout_constraintBottom_toBottomOf="@id/ivMveImg"
            app:layout_constraintEnd_toEndOf="@id/ivMveImg"
            app:layout_constraintStart_toStartOf="@id/ivMveImg"
            app:layout_constraintTop_toTopOf="@id/ivMveImg" />

        <TextView
            android:id="@+id/tvSucces"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp"
            android:fontFamily="@font/gotham_bold"
            android:gravity="center"
            android:text="@string/booking_successful"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvBookingId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:fontFamily="@font/gotham_bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/tvSucces" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivMveImg">


            <LinearLayout
                android:id="@+id/llMovieDetailsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivBookreview"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingTop="@dimen/_20sdp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tvMovieName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/gotham_bold"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/location"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/location_black" />

                    <TextView
                        android:id="@+id/tvmovieLoc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:fontFamily="@font/gotham_book"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/black">

                    <ImageView
                        android:id="@+id/ivCinema"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:scaleType="fitXY"
                        />

                    <TextView
                        android:id="@+id/tvExperienceName"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/gotham_medium"
                        android:gravity="left|center_vertical"
                        android:text=""
                        android:visibility="gone"
                        android:textColor="@color/marcus_red" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llDateTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:drawableStart="@drawable/date_black"
                        android:fontFamily="@font/gotham_bold"
                        android:gravity="center|start"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/_9sdp" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginStart="10dp"
                        android:drawableStart="@drawable/time_black"
                        android:fontFamily="@font/gotham_bold"
                        android:gravity="center|left"
                        android:paddingEnd="@dimen/_7sdp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/_9sdp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/tvSeats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:drawableStart="@drawable/seat_icon_black"
                    android:fontFamily="@font/gotham_bold"
                    android:gravity="center|left"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp" />

                <RelativeLayout
                    android:id="@+id/qrLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:gravity="center"
                   android:layout_margin="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvSeats">

                    <ImageView
                        android:id="@+id/imgQR"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/_12sdp"
                        android:scaleType="fitXY" />

                    <RelativeLayout
                        android:id="@+id/rlv_loading"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/_12sdp"
                        android:visibility="visible">

                        <ProgressBar
                            style="?android:attr/progressBarStyle"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerInParent="true" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txtQr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_toStartOf="@+id/ivExpand"
                        android:layout_toEndOf="@+id/imgQR"
                        android:fontFamily="@font/gotham_medium"
                        android:lineSpacingExtra="@dimen/_5sdp"
                        android:text="@string/tickets_text"
                        android:textColor="@color/welcome"
                        android:textSize="@dimen/_9sdp" />

                    <ImageView
                        android:id="@+id/ivExpand"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:src="@drawable/expand" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rlShare"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivHome"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/home_ic" />

                    <ImageView
                        android:id="@+id/ivShare"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/ivHome"
                        android:src="@drawable/share_ic" />

                </RelativeLayout>



            </LinearLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="@dimen/_232sdp"
            android:layout_height="@dimen/_130sdp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvBookingId" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
