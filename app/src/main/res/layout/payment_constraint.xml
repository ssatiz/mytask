<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp"
            android:background="@color/marcus_red">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp">

                <ImageView
                    android:id="@+id/ivBackToolbar"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="-10dp"
                    android:padding="@dimen/_9sdp"
                    android:src="@drawable/backarrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/gotham_bold"
                    android:text="@string/payment"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvTimer"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/gotham_medium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--mmr card layout-->
            <android.support.constraint.ConstraintLayout
                android:id="@+id/llMagical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/ivCard"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/loginreward"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvMAgical"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gotham_book"
                    android:gravity="center"
                    android:text="@string/magical_movie_rewards"
                    android:textColor="@color/white_light"
                    app:layout_constraintStart_toEndOf="@id/ivCard"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvYouhave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gotham_book"
                    android:text="@string/you_have"
                    android:textColor="@color/white_light"
                    app:layout_constraintTop_toBottomOf="@+id/tvMAgical" />

                <TextView
                    android:id="@+id/tvDollar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gotham_book"
                    android:textColor="@color/marcus_red"
                    app:layout_constraintStart_toEndOf="@id/tvYouhave"
                    app:layout_constraintTop_toBottomOf="@+id/tvMAgical" />

                <TextView
                    android:id="@+id/tvAccnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gotham_book"
                    android:text="@string/in_your_account"
                    android:textColor="@color/white_light"
                    app:layout_constraintStart_toEndOf="@id/tvDollar"
                    app:layout_constraintTop_toBottomOf="@+id/tvMAgical" />

                <ImageView
                    android:id="@+id/ivDetail"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_question"
                    app:layout_constraintStart_toEndOf="@id/tvAccnt"
                    app:layout_constraintTop_toBottomOf="@+id/tvMAgical" />

                <Spinner
                    android:id="@+id/cardSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@color/yellow"
                    android:gravity="center"
                    android:popupBackground="@color/black"
                    android:spinnerMode="dropdown"
                    android:theme="@style/ListText"
                    app:layout_constraintTop_toBottomOf="@+id/tvYouhave" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/black_arrow_down"
                    app:layout_constraintEnd_toEndOf="@id/cardSpinner"
                    app:layout_constraintTop_toBottomOf="@+id/tvYouhave" />


                <Button
                    android:id="@+id/btPay"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1.3"
                    android:background="@color/marcus_red"
                    android:fontFamily="@font/gotham_bold"
                    android:text="@string/pay"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/cardSpinner" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/btPay" />


            </android.support.constraint.ConstraintLayout>

            <!--gift card layout-->
            <LinearLayout
                android:id="@+id/llGiftCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">


                <TextView
                    android:id="@+id/tvGiftCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gotham_bold"
                    android:text="@string/gift_cards"
                    android:textColor="@color/white_light" />

                <ImageView
                    android:id="@+id/ivGDropDown"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/downarrow" />


                <android.support.constraint.ConstraintLayout
                    android:id="@+id/llgiftCardDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivGiftCard"
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/giftbanner"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvGift"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/gotham_book"
                        android:gravity="center"
                        android:text="@string/giftcards"
                        android:textColor="@color/white_light"
                        app:layout_constraintStart_toEndOf="@id/ivGiftCard" />

                    <TextView
                        android:id="@+id/tvGiftYouhave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/gotham_book"
                        android:text="@string/you_have"
                        android:textColor="@color/white_light"
                        app:layout_constraintTop_toBottomOf="@+id/ivGiftCard" />

                    <TextView
                        android:id="@+id/tvgiftDollar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/gotham_book"
                        android:textColor="@color/marcus_red"
                        app:layout_constraintStart_toEndOf="@id/tvGiftYouhave"
                        app:layout_constraintTop_toBottomOf="@+id/ivGiftCard" />

                    <TextView
                        android:id="@+id/tvGiftAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/gotham_book"
                        android:text="@string/in_your_account"
                        android:textColor="@color/white_light"
                        app:layout_constraintStart_toEndOf="@id/tvgiftDollar"
                        app:layout_constraintTop_toBottomOf="@+id/ivGiftCard" />

                    <ImageView
                        android:id="@+id/ivGiftDetail"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_question"
                        android:visibility="gone"
                        app:layout_constraintStart_toEndOf="@id/tvGiftAccount"
                        app:layout_constraintTop_toBottomOf="@+id/ivGiftCard" />


                    <Spinner
                        android:id="@+id/giftCardSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@color/yellow"
                        android:gravity="center"
                        android:popupBackground="@color/black"
                        android:spinnerMode="dropdown"
                        android:theme="@style/ListText"
                        app:layout_constraintTop_toBottomOf="@id/tvGiftYouhave" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/black_arrow_down"
                        app:layout_constraintEnd_toEndOf="@id/giftCardSpinner"
                        app:layout_constraintTop_toBottomOf="@id/tvGiftYouhave" />


                    <Button
                        android:id="@+id/btGiftPay"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1.3"
                        android:background="@color/marcus_red"
                        android:fontFamily="@font/gotham_bold"
                        android:text="@string/pay"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/giftCardSpinner" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/grey"
                        android:padding="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/btGiftPay" />
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>
            <!--saved card layout-->
            <android.support.constraint.ConstraintLayout
                android:id="@+id/llSavedCards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvSavecard"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/gotham_bold"
                    android:gravity="center_vertical"
                    android:text="@string/choose_card"
                    android:textColor="@color/white_light" />

                <ImageView
                    android:id="@+id/ivSDropDown"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/downarrow"
                    app:layout_constraintEnd_toEndOf="@id/tvSavecard" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvSavedCards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/tvSavecard" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey"
                    app:layout_constraintTop_toBottomOf="@+id/rvSavedCards" />
            </android.support.constraint.ConstraintLayout>

            <!--credit card layout-->
            <android.support.constraint.ConstraintLayout
                android:id="@+id/llPaymentType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPayment"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/gotham_bold"
                    android:gravity="center_vertical"
                    android:text="@string/credit_debit_card"
                    android:textColor="@color/white_light" />

                <ImageView
                    android:id="@+id/ivDropDown"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/downarrow"
                    app:layout_constraintEnd_toEndOf="@id/tvPayment" />


                <View
                    android:id="@+id/ViewCard"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvPayment" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/cardDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/ViewCard">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/inputCardNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white_light"
                        android:hint="@string/card_number"
                        android:textColorHint="@color/white_light"
                        app:hintEnabled="true"
                        app:layout_constraintTop_toTopOf="parent">

                        <EditText
                            android:id="@+id/editCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/white_light"
                            android:fontFamily="@font/gotham_book"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:maxLength="16"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/white_light"
                            android:textColorHint="@color/white_light"
                            android:textSize="12sp" />
                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:id="@+id/ivCardImg"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/card"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <LinearLayout
                        android:id="@+id/llcardExp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        app:layout_constraintTop_toBottomOf="@+id/inputCardNo">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/inputExpiry"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white_light"
                            android:hint="@string/expire_date"
                            android:paddingEnd="30dp"
                            android:textColorHint="@color/white_light"
                            app:hintEnabled="true">

                            <EditText
                                android:id="@+id/etExpiry"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/white_light"
                                android:focusable="false"
                                android:fontFamily="@font/gotham_book"
                                android:imeOptions="actionNext"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/white_light"
                                android:textColorHint="@color/white_light"
                                android:textSize="12sp" />


                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/inputCvv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:backgroundTint="@color/white_light"
                            android:hint="@string/cvv"
                            android:paddingEnd="20dp"
                            android:textColorHint="@color/white_light"
                            app:hintEnabled="true">

                            <EditText
                                android:id="@+id/etCvv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/white_light"
                                android:fontFamily="@font/gotham_book"
                                android:imeOptions="actionNext"
                                android:inputType="numberPassword"
                                android:maxLength="4"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/white_light"
                                android:textColorHint="@color/white_light"
                                android:textSize="12sp" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/inputAVS"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="0.5"
                            android:backgroundTint="@color/white_light"
                            android:fontFamily="@font/gotham_book"
                            android:hint="@string/zip_code"
                            android:imeOptions="actionNext"
                            android:inputType="textCapSentences"
                            android:paddingEnd="20dp"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/white_light"
                            android:textColorHint="@color/white_light"
                            app:hintEnabled="true">

                            <EditText
                                android:id="@+id/etAVS"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/white_light"
                                android:fontFamily="@font/gotham_book"
                                android:imeOptions="actionNext"
                                android:inputType="numberPassword"
                                android:maxLength="6"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/white_light"
                                android:textColorHint="@color/white_light"
                                android:textSize="12sp" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        app:layout_constraintTop_toBottomOf="@+id/llcardExp">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/inputFname"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white_light"
                            android:fontFamily="@font/gotham_book"
                            android:hint="@string/first_name"
                            android:imeOptions="actionNext"
                            android:inputType="textCapSentences"
                            android:paddingEnd="20dp"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/white_light"
                            android:textColorHint="@color/white_light"
                            app:hintEnabled="true">

                            <EditText
                                android:id="@+id/etFirstName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/white_light"
                                android:fontFamily="@font/gotham_book"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/white_light"
                                android:textColorHint="@color/white_light"
                                android:textSize="12sp" />


                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/inputLName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white_light"
                            android:hint="@string/last_name"
                            android:paddingEnd="20dp"
                            android:textColorHint="@color/white_light"
                            app:hintEnabled="true">

                            <EditText
                                android:id="@+id/etLName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/white_light"
                                android:fontFamily="@font/gotham_book"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/white_light"
                                android:textColorHint="@color/white_light"
                                android:textSize="12sp" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/cbSave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:buttonTint="@color/grey_xlight"
                        android:fontFamily="@font/gotham_book"
                        android:text="@string/save"
                        android:textColor="@color/white_light"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@+id/llName" />


                    <CheckBox
                        android:id="@+id/cbTerms"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:buttonTint="@color/grey_xlight"
                        android:fontFamily="@font/gotham_book"
                        android:text="@string/i_accept"
                        android:textColor="@color/white_light"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@+id/cbSave" />

                    <TextView
                        android:id="@+id/tvTerms"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="1dp"
                        android:fontFamily="@font/gotham_book"
                        android:gravity="center_vertical"
                        android:text="@string/terms_and_conditions"
                        android:textColor="@color/marcus_red"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/cbTerms"
                        app:layout_constraintTop_toBottomOf="@+id/cbSave" />

                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/marcus_red"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_36sdp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/gotham_bold"
            android:gravity="center"
            android:text="@string/_0_0"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/ivDownArrow"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/tvAmount"
            android:src="@drawable/uparrow" />

        <TextView
            android:id="@+id/tvProceed"
